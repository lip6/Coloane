<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent> 
		<groupId>fr.lip6.move.coloane</groupId> 
		<artifactId>coloane-parent</artifactId> 
		<version>0.14.0-SNAPSHOT</version> 
	</parent>

	<groupId>fr.lip6.move.coloane.application</groupId>
	<artifactId>application-parent</artifactId>
	<packaging>pom</packaging>
	<name>Application</name>
	<description>Application Package</description>

	<modules>
		<module>apicami</module>
		<module>apiws</module>
		<module>core</module>
		<module>interfaces</module>
	</modules>
	
	<dependencies>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>gef</artifactId>
			<version>[3.2,)</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>draw2d</artifactId>
			<version>[3.2,)</version>
		</dependency>
	</dependencies>
	
	<build>
	
		<!-- Ajouts des éléments dans le JAR -->
		<resources>
			<resource>
				<directory>.</directory>
				<includes>
					<include>build.properties</include>
					<include>plugin.xml</include>
					<include>plugin.properties</include>
					<include>resources/**</include>
					<include>lib/**</include>
				</includes>
			</resource>
			<resource>
				<directory>src</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>