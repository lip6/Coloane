<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="fr.lip6.move.coloane.ui.MainPerspectiveFactory"
            icon="icons/editeur.gif"
            id="fr.lip6.move.coloane.perspective"
            name="Coloane"/>
   </extension>
    <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="fr.lip6.move.coloane.actionSet"
            label="Coloane Action Set"
            visible="true">
         <action
               class="fr.lip6.move.coloane.main.ColoaneActions"
               icon="icons/encrypted.png"
               id="authentication"
               label="Authentication..."
               menubarPath="plateformMenu/group1"
               style="push"/>
         <menu
               id="plateformMenu"
               label="Platform">
            <separator name="group1"/>
            <separator name="group2"/>
         </menu>
         <action
               allowLabelUpdate="true"
               class="fr.lip6.move.coloane.main.ColoaneActions"
               icon="icons/connect_creating.png"
               id="connect"
               label="Connect model"
               menubarPath="plateformMenu/group2"
               style="push"/>
         <action
               class="fr.lip6.move.coloane.main.ColoaneActions"
               id="disconnect"
               label="Disconnect model"
               menubarPath="plateformMenu/group2"
               style="push"/>
      </actionSet>
   </extension>
    <extension
          point="org.eclipse.ui.views">
       <category
             id="fr.lip6.move.coloane.views"
             name="Coloane"/>
       <view
             category="fr.lip6.move.coloane.views"
             class="fr.lip6.move.coloane.ui.panels.HistoryView"
             icon="icons/det_pane_under.gif"
             id="fr.lip6.move.coloane.views.HistoricView"
             name="Historic"/>
       <view
             category="fr.lip6.move.coloane.views"
             class="fr.lip6.move.coloane.ui.panels.StateView"
             icon="icons/det_pane_under.gif"
             id="fr.lip6.move.coloane.views.StateView"
             name="State"/>
    </extension>
    <extension
          point="org.eclipse.ui.editors">
       <editor
             class="fr.lip6.move.coloane.ui.Editor"
             default="false"
             extensions="rdp"
             icon="icons/editeur.gif"
             id="fr.lip6.move.coloane.editor"
             name="Editor"/>
    </extension>
    <extension
          point="org.eclipse.ui.newWizards">
       <category
             id="fr.lip6.move.coloane.category"
             name="Coloane"/>
       <wizard
             category="fr.lip6.move.coloane.category"
             class="fr.lip6.move.coloane.ui.wizards.NewModelWizard"
             hasPages="true"
             icon="icons/editeur.gif"
             id="fr.lip6.move.coloane.wizard.newModel"
             name="New model"
             project="true"/>
    </extension>

</plugin>
