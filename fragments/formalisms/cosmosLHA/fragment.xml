<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="fr.lip6.move.coloane.core.formalisms">
      <Formalism
            extension="CosmosLHA.Formalism1"
            fkname="fr.lip6.move.coloane.formalism.cosmos.Formalism2"
            id="fr.lip6.move.coloane.formalism.cosmos.lha"
            name="CosmosLHA">
         <XmlDescription>
            <Graph
                  name="CosmosLHA">
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="HASL Formula">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="declarations">
               </Attribute>
               <Node
                     container="true"
                     name="location">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.EllipseNode"
                        description="location"
                        drawable="true"
                        height="15"
                        icon16px="resources/place_16.png"
                        icon24px="resources/place_24.png"
                        palettable="true"
                        paletteName="Location"
                        width="15">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="false"
                        name="name">
                  </Attribute>
                  <Attribute
                        default="TRUE"
                        displayed_default="false"
                        drawable="true"
                        multiline="true"
                        name="invariant">
                  </Attribute>
                  <Attribute
                        displayed_default="false"
                        drawable="true"
                        multiline="true"
                        name="flow">
                  </Attribute>
                  <Attribute
                        default="Normal"
                        drawable="true"
                        enumerated="true"
                        multiline="true"
                        name="type">
                     <EnumerationValue
                           name="Normal">
                     </EnumerationValue>
                     <EnumerationValue
                           name="Initial">
                     </EnumerationValue>
                     <EnumerationValue
                           name="Final">
                     </EnumerationValue>
                  </Attribute>
               </Node>
               <Arc
                     name="arc">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.DirectedArc"
                        description="Arc"
                        drawable="true"
                        icon16px="resources/arc_16.png"
                        icon24px="resources/arc_24.png"
                        palettable="true"
                        paletteName="Arc">
                  </GraphicInfo>
                  <Attribute
                        default="TRUE"
                        displayed_default="false"
                        drawable="true"
                        multiline="true"
                        name="guard">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="update">
                  </Attribute>
                  <Attribute
                        default="ALL"
                        drawable="true"
                        multiline="true"
                        name="action">
                  </Attribute>
               </Arc>
            </Graph>
         </XmlDescription>
      </Formalism>
   </extension>

</fragment>
