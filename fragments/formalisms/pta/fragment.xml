<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="fr.lip6.move.coloane.core.formalisms">
      <Formalism
            extension="pta"
            fkname="pta"
            id="fr.lip6.move.coloane.formalism.pta"
            name="Parametric timed automata">
         <XmlDescription>
            <Graph
                  name="Parametric timed automata">
               <Node
                     container="false"
                     name="state">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.EllipseNode"
                        description="Location"
                        drawable="true"
                        height="15"
                        icon16px="resources/state_16.png"
                        icon24px="resources/state_24.png"
                        palettable="true"
                        paletteName="Location"
                        width="15">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="false"
                        name="name">
                  </Attribute>
                  <Attribute
                        default="true"
                        displayed_default="false"
                        drawable="true"
                        multiline="true"
                        name="invariant">
                  </Attribute>
                  <Attribute
                        displayed_default="false"
                        drawable="true"
                        multiline="false"
                        name="type">
                     <EnumerationValue
                           name="Normal">
                     </EnumerationValue>
                     <EnumerationValue
                           name="Initial">
                     </EnumerationValue>
                  </Attribute>
               </Node>
               <Arc
                     name="Transition">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.DirectedArc"
                        description="arc"
                        drawable="true"
                        icon16px="resources/arc_16.png"
                        icon24px="resources/arc_24.png"
                        palettable="true"
                        paletteName="Arc">
                  </GraphicInfo>
                  <Attribute
                        default="true"
                        displayed_default="false"
                        drawable="true"
                        multiline="true"
                        name="guard">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="update">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="label">
                  </Attribute>
               </Arc>
               <Attribute
                     default="true"
                     displayed_default="true"
                     drawable="true"
                     multiline="true"
                     name="initialConstraint">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="Parameters">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="Clocks">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="Discrete">
               </Attribute>
            </Graph>
         </XmlDescription>
      </Formalism>
   </extension>

</fragment>
