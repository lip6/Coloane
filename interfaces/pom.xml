<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.lip6.move.coloane</groupId>
		<artifactId>coloane</artifactId>
		<version>1.3.0-SNAPSHOT</version>
	</parent>

	<artifactId>interfaces</artifactId>
	<version>1.0.11-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Interfaces</name>
	<description>Interfaces and shared object between coloane's core and coloane's API</description>

	<scm>
		<connection>scm:svn:https://coloane.rsr.lip6.fr/svn/trunk/${project.artifactId}</connection>
		<developerConnection>scm:svn:https://coloane.rsr.lip6.fr/svn/trunk/${project.artifactId}</developerConnection>
		<url>https://coloane.rsr.lip6.fr/trac/browser/trunk/${project.artifactId}</url>
	</scm>

	<build>
		<plugins>
			<plugin>
				<!-- Repetition du super pom car Continuum oublie qu'il faut le lire.. -->  
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-6</version>
				<configuration>
					<branchName>${project.artifactId}-${project.version}</branchName>
					<preparationGoals>scm:checkin clean integration-test scm:branch</preparationGoals>
					<updateBranchVersions>false</updateBranchVersions>
					<updateWorkingCopyVersions>false</updateWorkingCopyVersions>
				</configuration>	
			</plugin>
		</plugins>
		
			<!-- ~~~~~~~~~~~~~~~~~~~~ Ce qu'on va rajouter dans le jar	~~~~~~~~~~~~~~~~~~~~~~~~ -->
		<resources>
			<resource>
				<directory>src</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	</build>


</project>
