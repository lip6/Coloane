	<build>
		<finalName>${project.artifactId}_${project.version}-r${buildNumber}</finalName>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>test</testSourceDirectory>

		<!-- Configuration des plugin de Maven -->
		<plugins>

			<!-- Pour compiler avec le jdk 1.5 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>

			<!-- Pour le checkstyle -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<configLocation>http://coloane.lip6.fr/resources/coloane_checkstyle.xml</configLocation>
					<includeTestSourceDirectory>true</includeTestSourceDirectory>
					<failOnViolation>true</failOnViolation>
					<linkXRef>false</linkXRef>
				</configuration>
				<executions>
					<execution>
						<id>Checkstyle</id>
						<phase>validate</phase>        
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<!-- calcule la revision courante -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>maven-buildnumber-plugin</artifactId>
				<executions>
					<execution>
						<id>BuildNumber</id>
						<phase>validate</phase>        
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin> 
				<groupId>org.apache.maven.plugins</groupId> 
				<artifactId>maven-jar-plugin</artifactId> 
				<configuration> 
					<archive> 
						<manifestFile>META-INF/MANIFEST.MF</manifestFile>
						<manifest> 
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>  
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries> 
						</manifest> 
						<manifestEntries>
							<Bundle-Version-Maven>${project.version}-r${buildNumber}</Bundle-Version-Maven>
						</manifestEntries>
					</archive> 
				</configuration> 
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					
					<!-- modifications du manifest pour les snapshot -->
					<execution>
						<id>UpdateManifest</id>
						<phase>generate-sources</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>updateManifest.sh</executable>
							<arguments>
								<argument>${project.version}</argument>
								<argument>${buildNumber}</argument>
							</arguments>
						</configuration>
					</execution>
					
					<!-- enregistrement des versions des plugins -->
					<execution>
						<id>ComputeVersion</id>
						<phase>generate-sources</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>computeVersion.sh</executable>
							<arguments>
								<argument>${project.version}</argument>
								<argument>/coloane/public</argument>
							</arguments>
						</configuration>
					</execution>
					
					<!-- deploiement du jar au bon endroit (snapshot/release)-->
					<execution>
						<id>Deploy</id>
						<phase>deploy</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>deployJar.sh</executable>
							<arguments>
								<argument>${project.version}</argument>
								<argument>${build.finalName}.${project.packaging}</argument>
								<argument>/coloane/public</argument>
							</arguments>
						</configuration>
					</execution>
					
					<!-- nettoyage du manifest (retour a la revision de base) -->
					<execution>
						<id>CleanManifest</id>
						<phase>clean</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>cleanManifest.sh</executable>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<!-- Ajout d'un goal pour la release -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<goals>clean deploy</goals>
					<scmCommentPrefix>[Maven-Release]</scmCommentPrefix>
					<preparationGoals>clean</preparationGoals>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- Depots (Repositories) -->
	<repositories>
