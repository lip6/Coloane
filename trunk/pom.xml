		</plugins>
	</reporting>

	<build>
		<finalName>${project.artifactId}_${project.version}-r${buildNumber}</finalName>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>test</testSourceDirectory>
		<!--<directory>target/jar</directory>-->

		<!-- Pour ssh et ftp -->
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh-external</artifactId>
				<version>1.0-alpha-5</version>
			</extension>
		</extensions>

		<!-- Configuration des plugin de Maven -->
		<plugins>

			<!-- Pour compiler avec le jdk 1.5 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>

			<!-- Pour le SVN -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<configuration>
					<connectionType>developerConnection</connectionType>
					<username>${server.username}</username>
					<password>${server.password}</password>
					<branch>${project.artifactId}-${project.version}</branch>
					<message>[maven-scm-plugin]</message>
				</configuration>
			</plugin>

			<!-- Pour configurer le JAR de sortie -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<!-- Indique où se trouve notre manifest.mf -->
						<manifestFile>META-INF/MANIFEST.MF</manifestFile>
						<!-- Rajoute Implementation-Build dans le MANIFEST -->
						<manifest>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries> 
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<!-- <manifestEntries> -->
						<!-- 	<Implementation-Build>${buildNumber}</Implementation-Build> -->
						<!-- </manifestEntries> -->
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<!-- Pour les releases -->  
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-6</version>
				<configuration>
					<branchName>${project.artifactId}-${project.version}</branchName>
					<preparationGoals>scm:checkin clean integration-test scm:branch</preparationGoals>
					<updateBranchVersions>false</updateBranchVersions>
					<updateWorkingCopyVersions>false</updateWorkingCopyVersions>
				</configuration>	
			</plugin>

			<plugin>
				<!-- Pour le checkstyle -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<configLocation>https://coloane.rsr.lip6.fr/public/resources/coloane_checkstyle.xml</configLocation>
					<includeTestSourceDirectory>true</includeTestSourceDirectory>
					<failOnViolation>true</failOnViolation>
					<linkXRef>false</linkXRef>
				</configuration>
			</plugin>

			<plugin>
				<!-- Pour mettre le buildnumber au bout du jar ${buildNumber} -->
				<!-- /!\ Ne marche qu'avec un SVN en anglais -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>maven-buildnumber-plugin</artifactId>
				<version>0.9.4</version>
				<executions>
					<execution>
						<id>BuildNumber</id>
						<phase>validate</phase>        
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Pour le checkstyle -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<executions>
					<execution>
						<id>Checkstyle</id>
						<phase>validate</phase>        
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<executions>
					<execution>
						<id>UpTools</id>
						<phase>validate</phase>
						<goals>
							<goal>update</goal>
						</goals>
						<configuration>
							<basedir>/coloane/tools</basedir>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>Deploy</id>
						<phase>deploy</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>deploy.sh</executable>
							<arguments>
								<argument>${build.finalName}.${packaging}</argument>
								<argument>${buildNumber}</argument>
								<argument>/coloane/public/night-updates/plugins</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<!-- Ce qu'on va rajouter dans le JAR -->
		<resources>
			<resource>
				<directory>src</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>

	</build>

