<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

	<groupId>fr.lip6.move.coloane</groupId>
  <artifactId>fr.lip6.move.coloane.interfaces</artifactId>
  <version>1.0.7-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Interfaces - Maven-Packaging </name>
  <description>Interfaces and shared object between coloane's core and coloane's API</description>
  
  <scm>
   	<developerConnection>scm:svn:https://emasliah:Zp74Ax3D@srcdev.lip6.fr/svn/research/jbvoron/projets/coloane/fr.lip6.move.coloane.interfaces/branches/maven-packaging</developerConnection>
 		<url>https://srcdev.lip6.fr/svn/research/jbvoron/projets/coloane/fr.lip6.move.coloane.interfaces/branches/maven-packaging</url>
  </scm>
  
  <build>
    <finalName>${project.artifactId}-${project.version}-r${buildNumber}</finalName>
    <sourceDirectory>src</sourceDirectory>
    <directory>target/jar</directory>
    
    <!-- Vraiment util ?? -->
  	<pluginManagement>
    	<plugins>
      	<plugin>
  	    	<groupId>org.apache.maven.plugins</groupId>
        	<artifactId>maven-jar-plugin</artifactId>
        	<version>2.1</version>
      	</plugin>
    	</plugins>
  	</pluginManagement>
		
		<plugins>
			<plugin>
				<!-- Pour compiler avec le jdk 1.5 -->
    		<groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-compiler-plugin</artifactId>
      	<configuration>
       		<source>1.5</source>
       		<target>1.5</target>
      	</configuration>
    	</plugin>
    	<plugin>
    		<!-- Pour modifier le manifest avec la version du pom -->
    	  <groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-psteclipse-plugin</artifactId>
        <executions>
        	<execution>
          	<phase>package</phase>        
          	<goals>
            	<goal>eclipse-plugin</goal>
          	</goals>
        	</execution>
        </executions>
    	</plugin>
    	<plugin>
    		<!-- Pour le svn -->
       	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <executions>
        	<!--<execution>
        		 On update des le debut
        		<id>Up</id>
          	<phase>validate</phase>        
          	<goals>
            	<goal>update</goal>
          	</goals>
        	</execution> -->
        	<execution>
        	  <!-- On rajoute le jar cree -->
        		<id>Add</id>
          	<phase>package</phase>        
          	<goals>
            	<goal>add</goal>
          	</goals>
          	<configuration>
          		<includes>target/jar/**</includes>
          	</configuration>
        	</execution>
        	<execution>
        		<!-- On commit pour mettre le svn a jour -->
        		<id>Co</id>
          	<phase>package</phase>        
          	<goals>
            	<goal>checkin</goal>
          	</goals>
          	<configuration>
          		<message>Mise a jour du svn apres package</message>
          	</configuration>
        	</execution>
      	</executions>
      	<configuration>
      		<connectionType>developerConnection</connectionType>
      	</configuration>
      </plugin>
      <plugin>
      	<!-- Pour mettre le buildnumber au bout du jar ${buildNumber} -->
      	<groupId>org.codehaus.mojo</groupId>
      	<artifactId>maven-buildnumber-plugin</artifactId>
      	<version>0.9.4</version>
      	<executions>
        	<execution>
        		<id>buildNumber</id>
          	<phase>validate</phase>        
          	<goals>
            	<goal>create</goal>
          	</goals>
        	</execution>
      	</executions>
      	<configuration>
      	  <username>emasliah</username>
      		<password>Zp74Ax3D</password>
        	<!--<doCheck>true</doCheck>
        	<doUpdate>true</doUpdate>-->
      	</configuration>
    	</plugin>
    	<plugin>
    		<!-- Pour configurer le jar de sortie -->
      	<groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-jar-plugin</artifactId>
      	<configuration>
        	<archive>
        		<!-- Donne notre MANIFEST -->
        		<manifestFile>META-INF/MANIFEST.MF</manifestFile>
          	<manifest>
            	<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
          	</manifest>
          	<!-- Rajoute Implementation-Build dans le MANIFEST -->
          	<manifestEntries>
            	<Implementation-Build>${buildNumber}</Implementation-Build>
          	</manifestEntries>
        	</archive>
      	</configuration>
    	</plugin>
      <!--<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>https://srcdev.lip6.fr/svn/research/jbvoron/projets/coloane/fr.lip6.move.coloane.interfaces/branches/maven-packaging/target/jar</tagBase>
        </configuration>
      </plugin>-->
		</plugins>
  
	</build>
	
	<pluginRepositories>
		<!-- Pour chercher les mise a jour de maven-buildnumber-plugin -->
    <pluginRepository>
        <id>tlc</id>
        <name>TLC Repository</name>
        <url>http://commons.ucalgary.ca/pub/m2</url>
    </pluginRepository>
	</pluginRepositories>
  
</project>
