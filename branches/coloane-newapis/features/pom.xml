<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent> 
		<groupId>fr.lip6.move.coloane</groupId> 
		<artifactId>coloane-parent</artifactId> 
		<version>0.14.0-SNAPSHOT</version> 
	</parent>

	<groupId>fr.lip6.move.coloane.features</groupId>
	<artifactId>features-parent</artifactId>
	<packaging>pom</packaging>
	<name>Features</name>
	<description>All features related to Coloane project</description>

	<modules>
		<module>importExport</module>
		<module>modelExamples</module>
		<module>languagePack</module>
		<module>coloaneMain</module>
	</modules>
	
	<build>
		<plugins>
			<plugin>
				<!-- Pour configurer le jar de sortie -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries> 
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<Bundle-Name>${project.groupId}.${project.artifactId}</Bundle-Name>
							<Bundle-Version>${project.version}-r${buildNumber}</Bundle-Version>
							<Bundle-Version-Maven>${project.version}-r${buildNumber}</Bundle-Version-Maven>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>resources</directory>
				<includes>
					<include>feature.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>.</directory>
				<includes>
					<include>build.properties</include>
				</includes>
			</resource>
		</resources>
	</build>

</project>
