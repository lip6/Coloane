<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="fr.lip6.move.coloane.core.formalisms">
      <Formalism
            extension="model"
            fkname="Hybrid Automata"
            id="hyridautomata"
            image="resources/hclock_16.png"
            name="Hybrid Automata">
         <XmlDescription>
            <Graph
                  name="Hybrid Automata">
               <Node
                     container="false"
                     name="State">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.formalism.hack.StateNode"
                        description="A state of an hybrid automaton"
                        drawable="true"
                        height="18"
                        icon16px="resources/state_16.png"
                        icon24px="resources/state_24.png"
                        palettable="true"
                        paletteName="State"
                        width="18">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Clock speed">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Invariant">
                  </Attribute>
                  <Attribute
                        default="False"
                        drawable="false"
                        enumerated="true"
                        multiline="false"
                        name="Initial">
                     <EnumerationValue
                           name="True">
                     </EnumerationValue>
                     <EnumerationValue
                           name="False">
                     </EnumerationValue>
                  </Attribute>
                  <Attribute
                        default="False"
                        drawable="false"
                        enumerated="true"
                        multiline="false"
                        name="Final">
                     <EnumerationValue
                           name="True">
                     </EnumerationValue>
                     <EnumerationValue
                           name="False">
                     </EnumerationValue>
                  </Attribute>
               </Node>
               <Arc
                     name="Transition">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.DirectedArc"
                        description="A transition of an hybrid automaton"
                        drawable="true"
                        icon16px="resources/arc_16.png"
                        icon24px="resources/arc_24.png"
                        palettable="true"
                        paletteName="Transition">
                  </GraphicInfo>
                  <Attribute
                        default="True"
                        drawable="true"
                        multiline="false"
                        name="Guard">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Label">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Reset">
                  </Attribute>
               </Arc>
               <Attribute
                     drawable="true"
                     multiline="false"
                     name="Analogic clocks">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="false"
                     name="Digital clocks">
               </Attribute>
            </Graph>
         </XmlDescription>
      </Formalism>
      <Formalism
            extension="model"
            fkname="Timed Automata"
            id="timedautomata"
            image="resources/clock_16.png"
            name="Timed Automata">
         <XmlDescription>
            <Graph
                  name="Timed Automata">
               <Node
                     container="false"
                     name="State">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.formalism.hack.StateNode"
                        description="A state of an hybrid automaton"
                        drawable="true"
                        height="18"
                        icon16px="resources/state_16.png"
                        icon24px="resources/state_24.png"
                        palettable="true"
                        paletteName="State"
                        width="18">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Invariant">
                  </Attribute>
                  <Attribute
                        default="False"
                        drawable="false"
                        enumerated="true"
                        multiline="false"
                        name="Initial">
                     <EnumerationValue
                           name="True">
                     </EnumerationValue>
                     <EnumerationValue
                           name="False">
                     </EnumerationValue>
                  </Attribute>
                  <Attribute
                        default="False"
                        drawable="false"
                        enumerated="true"
                        multiline="false"
                        name="Final">
                     <EnumerationValue
                           name="True">
                     </EnumerationValue>
                     <EnumerationValue
                           name="False">
                     </EnumerationValue>
                  </Attribute>
               </Node>
               <Arc
                     name="Transition">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.DirectedArc"
                        description="A transition of an hybrid automaton"
                        drawable="true"
                        icon16px="resources/arc_16.png"
                        icon24px="resources/arc_24.png"
                        palettable="true"
                        paletteName="Transition">
                  </GraphicInfo>
                  <Attribute
                        default="True"
                        drawable="true"
                        multiline="false"
                        name="Guard">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Label">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Reset">
                  </Attribute>
               </Arc>
               <Attribute
                     drawable="true"
                     multiline="false"
                     name="Clocks">
               </Attribute>
            </Graph>
         </XmlDescription>
      </Formalism>
      <Formalism
            extension="model"
            fkname="Interrupt Timed Automata"
            id="interrupttimedautomata"
            image="resources/iclock_16.png"
            name="Interrupt Timed Automata">
         <XmlDescription>
            <Graph
                  name="Timed Automata">
               <Node
                     container="false"
                     name="State">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.formalism.hack.StateNode"
                        description="A state of an hybrid automaton"
                        drawable="true"
                        height="18"
                        icon16px="resources/state_16.png"
                        icon24px="resources/state_24.png"
                        palettable="true"
                        paletteName="State"
                        width="18">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Invariant">
                  </Attribute>
                  <Attribute
                        default="1"
                        drawable="true"
                        multiline="false"
                        name="Level">
                  </Attribute>
                  <Attribute
                        default="L"
                        drawable="true"
                        multiline="false"
                        name="Policy">
                  </Attribute>
                  <Attribute
                        default="False"
                        drawable="false"
                        enumerated="true"
                        multiline="false"
                        name="Initial">
                     <EnumerationValue
                           name="True">
                     </EnumerationValue>
                     <EnumerationValue
                           name="False">
                     </EnumerationValue>
                  </Attribute>
                  <Attribute
                        default="False"
                        drawable="false"
                        enumerated="true"
                        multiline="false"
                        name="Final">
                     <EnumerationValue
                           name="True">
                     </EnumerationValue>
                     <EnumerationValue
                           name="False">
                     </EnumerationValue>
                  </Attribute>
               </Node>
               <Arc
                     name="Transition">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.DirectedArc"
                        description="A transition of an hybrid automaton"
                        drawable="true"
                        icon16px="resources/arc_16.png"
                        icon24px="resources/arc_24.png"
                        palettable="true"
                        paletteName="Transition">
                  </GraphicInfo>
                  <Attribute
                        default="True"
                        drawable="true"
                        multiline="false"
                        name="Guard">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Label">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="Reset">
                  </Attribute>
               </Arc>
               <Attribute
                     drawable="true"
                     multiline="false"
                     name="Clocks">
               </Attribute>
            </Graph>
         </XmlDescription>
      </Formalism>
   </extension>

</fragment>
