<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>fr.lip6.move.coloane.update</groupId>
	<artifactId>feature</artifactId>
	<packaging>jar</packaging>
	<version>0.5.3-SNAPSHOT</version>
	<name>Feature</name>
	<description>La feature de coloane</description>

	<scm>
		<connection>scm:svn:https://coloane.rsr.lip6.fr/svn/trunk/${project.artifactId}</connection>
		<developerConnection>scm:svn:https://coloane.rsr.lip6.fr/svn/trunk/${project.artifactId}</developerConnection>
		<url>https://coloane.rsr.lip6.fr/trac/browser/trunk/${project.artifactId}</url>
	</scm>

	<dependencies>

		<dependency>
			<groupId>fr.lip6.move.coloane</groupId>
			<artifactId>interfaces</artifactId>
			<version>1.0.9-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>fr.lip6.move.coloane</groupId>
			<artifactId>apicami</artifactId>
			<version>0.9.8-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>fr.lip6.move.coloane</groupId>
			<artifactId>core</artifactId>
			<version>0.9.8-SNAPSHOT</version>
		</dependency>

	</dependencies>

	<build>
		<finalName>${project.artifactId}_${project.version}-r${buildNumber}</finalName>

		<plugins>

			<plugin>
				<!-- Pour mettre le buildnumber au bout du jar ${buildNumber} -->
				<!-- /!\ Ne marche que avec svn en anglais -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>maven-buildnumber-plugin</artifactId>
				<version>0.9.4</version>
				<executions>
					<execution>
						<id>BuildNumber</id>
						<phase>validate</phase>        
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>UpManifest</id>
						<phase>generate-sources</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>updateManifest.sh</executable>
							<arguments>
								<argument>${buildNumber}</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>Build_feature</id>
						<phase>validate</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>build_feature.pl</executable>
							<arguments>
								<argument>feature.xml</argument>
								<argument>${buildNumber}</argument>
								<argument>/coloane/public/night-updates/plugins</argument>
								<argument>/coloane/public/night-updates/features</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>Deploy</id>
						<phase>deploy</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>deploy.sh</executable>
							<arguments>
								<argument>${build.finalName}.${packaging}</argument>
								<argument>${buildNumber}</argument>
								<argument>/coloane/public/night-updates/features</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<!-- Pour configurer le jar de sortie -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<!-- Donne notre MANIFEST -->
						<manifestFile>META-INF/MANIFEST.MF</manifestFile>
						<manifest>
							<addDefaultImplementationEntries>false</addDefaultImplementationEntries>
						</manifest>
						<!-- Rajoute Implementation-Build dans le MANIFEST -->
						<manifestEntries>
							<Implementation-Build>${buildNumber}</Implementation-Build>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>

		</plugins>

		<resources>
			<resource>
				<directory>resources</directory>
				<includes>
					<include>feature.xml</include>
				</includes>
			</resource>
		</resources>

		<!-- Pour ssh et ftp -->
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh-external</artifactId>
				<version>1.0-alpha-5</version>
			</extension>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-alpha-6</version>
			</extension>
		</extensions>

	</build>

	<repositories>
		<!-- Le repository des plugins Eclipse -->
		<repository>
			<id>Eclipse</id>
			<name>Eclipse Repository</name>
			<url>http://repo1.maven.org/eclipse</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
		<!-- Pour chercher les mise a jour de maven-buildnumber-plugin -->
		<pluginRepository>
			<id>Tlc</id>
			<name>TLC Repository</name>
			<url>http://commons.ucalgary.ca/pub/m2</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<!-- Envoie par scp lors du deploy -->
	<distributionManagement>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>Coloane-Releases</id>
			<name>Coloane Releases</name>
			<url>scp://coloane.rsr.lip6.fr/coloane/public/releases</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>Coloane-Snapshots</id>
			<name>Coloane Snapshots</name>
			<url>scp://coloane.rsr.lip6.fr/coloane/public/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

</project>
