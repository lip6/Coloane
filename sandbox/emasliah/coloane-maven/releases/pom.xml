<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>fr.lip6.move.coloane</groupId>
    <artifactId>fr.lip6.move.coloane</artifactId>
    <version>1.0</version>
  </parent>
  
  <groupId>${project.parent.groupId}</groupId>
  <artifactId>fr.lip6.move.coloane.releases</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Releases - Maven-Packaging</name>
  <description>Releases</description>
  
  <scm>
  	<connection>scm:svn:https://srcdev.lip6.fr/svn/research/jbvoron/projets/coloane/releases</connection>
   	<developerConnection>scm:svn:https://srcdev.lip6.fr/svn/research/jbvoron/projets/coloane/releases</developerConnection>
 		<url>https://srcdev.lip6.fr/svn/research/jbvoron/projets/coloane/releases</url>
  </scm>
  
  <dependencies>
    <dependency>
      <groupId>${project.parent.groupId}</groupId>
      <artifactId>fr.lip6.move.coloane.interfaces</artifactId>
      <version>1.0.3-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>${project.parent.groupId}</groupId>
      <artifactId>fr.lip6.move.coloane.apicami</artifactId>
      <version>0.9.8-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>${project.parent.groupId}</groupId>
      <artifactId>fr.lip6.move.coloane.core</artifactId>
      <version>0.9.2-SNAPSHOT</version>
    </dependency>
  </dependencies>
  
  <build>

		<plugins>
		
			<!-- ~~~~~~~~~~~~~~~~~~~~ Configuration des plugins ~~~~~~~~~~~~~~~~~~~~ -->
		
    	<!-- ~~~~~~~~~~~~~~~~~~~~~ Executions des plugins ~~~~~~~~~~~~~~~~~~~~~~
    			 ~~~~~~~~~~~~~~~~~~~~~ S'effectue dans l'ordre ~~~~~~~~~~~~~~~~~~~~~ -->
    			 
    	<plugin>
    		<!-- Pour le svn -->
       	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <executions>  
        	<execution>
        		<!-- On update -->
        		<id>Up</id>
          	<phase>validate</phase>        
          	<goals>
            	<goal>update</goal>
          	</goals>
        	</execution>
        </executions>
      </plugin>
    			 
    	<plugin>
      	 <!-- Pour mettre le buildnumber au bout du jar ${buildNumber} 
      	 			/!\ Ne marche que avec svn en anglais -->
      	<groupId>org.codehaus.mojo</groupId>
      	<artifactId>maven-buildnumber-plugin</artifactId>
      	<version>0.9.4</version>
      	<executions>
        	<execution>
        		<id>BuildNumber</id>
          	<phase>validate</phase>        
          	<goals>
            	<goal>create</goal>
          	</goals>
        	</execution>
      	</executions>
     	</plugin>
    			 
    	<plugin>
    		<!-- Pour faire un tar -->   
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>Tar</id>
          	<phase>package</phase> 
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>tar.sh</executable>
          <arguments>
            <argument>0.9.2</argument>
            <argument>${buildNumber}</argument>
          </arguments>
        </configuration>
      </plugin>
    	
      <plugin>
    		<!-- Pour le svn -->
       	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <executions>  
        	<execution>
        	  <!-- On rajoute le jar cree -->
        		<id>Add</id>
          	<phase>package</phase>        
          	<goals>
            	<goal>add</goal>
          	</goals>
          	<configuration>
          		<includes>night_builds/*.tar.gz</includes>
          	</configuration>
        	</execution>
        	<!--<execution>
        		<!~~ On commit pour mettre le svn a jour ~~>
        		<id>Co</id>
          	<phase>package</phase>        
          	<goals>
            	<goal>checkin</goal>
          	</goals>
          	<configuration>
          		<message>Mise a jour du svn apres package</message>
          	</configuration>
        	</execution>-->
      	</executions>
      </plugin>
      
      <!--<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>https://srcdev.lip6.fr/svn/research/jbvoron/projets/coloane/fr.lip6.move.coloane.interfaces/branches/maven-packaging/target/jar</tagBase>
        </configuration>
      </plugin>-->
      
		</plugins>

	</build>
	
</project>
