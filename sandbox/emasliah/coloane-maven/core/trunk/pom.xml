<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>fr.lip6.move.coloane</groupId>
    <artifactId>coloane-maven</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

	<groupId>${project.parent.groupId}</groupId>
  <artifactId>core</artifactId>
  <version>0.9.3-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Core - Maven-Packaging</name>
  <description>Core</description>
  
  <scm>
  	<connection>scm:svn:https://srcdev.lip6.fr/svn/research/coloane/sandbox/emasliah/coloane-maven/core/trunk</connection>
   	<developerConnection>scm:svn:https://srcdev.lip6.fr/svn/research/coloane/sandbox/emasliah/coloane-maven/core/trunk</developerConnection>
 		<url>https://srcdev.lip6.fr/trac/research/coloane/browser/sandbox/emasliah/coloane-maven/core/trunk</url>
  </scm>
  
	<dependencies>
    <dependency>
      <groupId>${project.parent.groupId}</groupId>
      <artifactId>interfaces</artifactId>
      <version>1.0.3-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>${project.parent.groupId}</groupId>
      <artifactId>apicami</artifactId>
      <version>0.9.8-SNAPSHOT</version>
    </dependency>
  </dependencies>
  
	<build>

		<!-- ~~~~~~~~~~~~~~~~~~~~ Configuration des plugins ~~~~~~~~~~~~~~~~~~~~ -->
			
		<plugins>
		
			<plugin>
				<!-- Pour compiler avec le -classpath -->
    		<groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-compiler-plugin</artifactId>
      	<configuration>
       		<compilerArgument>@javac_options</compilerArgument>
      	</configuration>
    	</plugin>
    	
    <plugin>
   		<!-- Pour la javacdoc -->
   		<groupId>org.apache.maven.plugins</groupId>
       <artifactId>maven-javadoc-plugin</artifactId>
       <configuration>
   			 <excludePackageNames>com.*:org.*</excludePackageNames>
   	 	</configuration>
   </plugin>		
	
	<plugin>
		<!-- Pour supprimer le fichier javac_options -->
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-clean-plugin</artifactId>
		<configuration>
			<filesets>
				<fileset>
					<directory>.</directory>
					<includes>
						<include>javac_options</include>
					</includes>
				</fileset>
				<fileset>
					<directory>${project.artifactId}/trunk</directory>
					<includes>
						<include>javac_options</include>
					</includes>
				</fileset>
			</filesets>
		</configuration>
	</plugin>
    	
    	<!-- ~~~~~~~~~~~~~~~~~~~~~ Executions des plugins ~~~~~~~~~~~~~~~~~~~~~~
    			 ~~~~~~~~~~~~~~~~~~~~~ S'effectue dans l'ordre ~~~~~~~~~~~~~~~~~~~~~ -->
      
      <!--<plugin>
    		<!~~ Pour modifier le manifest avec la version du pom ~~>
    	  <groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-psteclipse-plugin</artifactId>
        <executions>
        	<execution>
          	<phase>validate</phase>        
          	<goals>
            	<goal>eclipse-plugin</goal>
          	</goals>
        	</execution>
        </executions>
    	</plugin>-->
    	
    	<plugin>
    		<!-- Pour creer le fichier javac_options -->  
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>Javac_options</id>
          	<phase>validate</phase> 
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>lib.sh</executable>
          <arguments>
            <argument>lib</argument>
          </arguments>
        </configuration>
      </plugin>
      
     
		</plugins>
		
		<!-- ~~~~~~~~~~~~~~~~~~~~ Ce qu'on va rajouter dans le jar ~~~~~~~~~~~~~~~~~~~~~~~~ -->
		
		<resources>
     <resource>
       <directory>.</directory>
       <includes>
         <include>icons/**</include>
         <include>resources/**</include>
         <include>build.properties</include>
         <include>plugin.properties</include>
         <include>plugin.xml</include>
       </includes>
     </resource>
   </resources>
  
	</build>
	
</project>
