  <artifactId>apicami</artifactId>
  <version>0.9.8-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Apicami</name>
  <description>Api (cami)</description>
  
	<scm>
		<connection>scm:svn:https://srcdev.lip6.fr/svn/research/coloane/sandbox/emasliah/${project.parent.artifactId}/trunk/${project.artifactId}</connection>
