	<groupId>${project.parent.groupId}</groupId>
  <artifactId>interfaces</artifactId>
  <version>1.0.3-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Interfaces - Maven-Packaging</name>
  <description>Interfaces and shared object between coloane's core and coloane's API</description>
  
  <scm>
  	<connection>scm:svn:https://srcdev.lip6.fr/svn/research/coloane/sandbox/emasliah/coloane_maven_1.3/interfaces/trunk</connection>
   	<developerConnection>scm:svn:https://srcdev.lip6.fr/svn/research/coloane/sandbox/emasliah/coloane_maven_1.3/interfaces/trunk</developerConnection>
 		<url>https://srcdev.lip6.fr/trac/research/coloane/browser/sandbox/emasliah/coloane_maven_1.3/interfaces/trunk</url>
  </scm>
  
  <build>
    
		<plugins>
		
			<!-- ~~~~~~~~~~~~~~~~~~~~ Configuration des plugins ~~~~~~~~~~~~~~~~~~~~ -->
			
			     	
     	<plugin>
    		<!-- Pour les releases -->  
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.0-beta-5</version>
        <configuration>
          <preparationGoals>clean integration-test scm:branch</preparationGoals>
        </configuration>
      </plugin>
      
       <plugin>
      	<!-- Pour creer la branche apres avoir fait une release -->
      	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
      	<configuration>
      		<branch>${project.artifactId}-${project.version}</branch>
      	</configuration>	
     	</plugin>
		
    	<!-- ~~~~~~~~~~~~~~~~~~~~~ Executions des plugins ~~~~~~~~~~~~~~~~~~~~~~
    			 ~~~~~~~~~~~~~~~~~~~~~ S'effectue dans l'ordre ~~~~~~~~~~~~~~~~~~~~~ -->
    			 
