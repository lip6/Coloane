  <!-- Envoie par ftp lors du deploy -->
  <distributionManagement>
  	<!-- use the following if you're not using a snapshot version. -->
    <repository>
      <id>Izanami-ftp</id>
      <name>Izanami</name>
      <url>ftp://izanami/coloane</url>
    </repository>
    <!-- use the following if you ARE using a snapshot version. -->
