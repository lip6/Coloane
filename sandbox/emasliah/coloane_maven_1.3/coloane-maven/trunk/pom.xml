  <build>
  
  	<finalName>${project.artifactId}_${project.version}-r${buildNumber}</finalName>
    <sourceDirectory>src</sourceDirectory>
    <testSourceDirectory>test</testSourceDirectory>
    <directory>target/jar</directory>
    
  	<!--Pour dire la version que l'on veux -->
  	<pluginManagement>
   		<plugins>
     		<plugin>
  	   		<groupId>org.apache.maven.plugins</groupId>
       		<artifactId>maven-jar-plugin</artifactId>
       		<version>2.1</version>
     		</plugin>
     		<plugin>
  	   		<groupId>org.apache.maven.release</groupId>
       		<artifactId>maven-release-manager</artifactId>
       		<version>1.0-alpha-4</version>
     		</plugin>
			</plugins>
  	</pluginManagement>
  	
  	<!-- Pour ssh et ftp -->
  	<extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
         <artifactId>wagon-ssh-external</artifactId>
         <version>1.0-alpha-5</version>
      </extension>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
         <artifactId>wagon-ftp</artifactId>
         <version>1.0-alpha-6</version>
      </extension>
    </extensions>
		
		<plugins>
			
			<!-- ~~~~~~~~~~~~~~~~~~~~ Configuration des plugins ~~~~~~~~~~~~~~~~~~~~ -->
		
			<plugin>
				<!-- Pour compiler avec le jdk 1.5 -->
  			<groupId>org.apache.maven.plugins</groupId>
   			<artifactId>maven-compiler-plugin</artifactId>
   			<configuration>
  				<source>1.5</source>
    			<target>1.5</target>
    		</configuration>
  		</plugin>
  		
  		<plugin>
    		<!-- Pour le svn -->
       	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
    		<configuration>
      		<connectionType>developerConnection</connectionType>
          <username>${server.username}</username>
          <password>${server.password}</password>
          <branch>${project.artifactId}-${project.version}</branch>
          <message>[maven-scm-plugin] Checkin</message>
      	</configuration>
      </plugin>
      
      <plugin>
    		<!-- Pour configurer le jar de sortie -->
      	<groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-jar-plugin</artifactId>
      	<configuration>
        	<archive>
        		<!-- Donne notre MANIFEST -->
        		<manifestFile>META-INF/MANIFEST.MF</manifestFile>
          	<manifest>
            	<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
          	</manifest>
          	<!-- Rajoute Implementation-Build dans le MANIFEST -->
          	<manifestEntries>
            	<Implementation-Build>${buildNumber}</Implementation-Build>
          	</manifestEntries>
        	</archive>
      	</configuration>
    	</plugin>
    	
 			<plugin>
      	<!-- Pour mettre le buildnumber au bout du jar ${buildNumber} 
      	 		  /!\ Ne marche que avec svn en anglais -->
      	<groupId>org.codehaus.mojo</groupId>
      	<artifactId>maven-buildnumber-plugin</artifactId>
      	<version>0.9.4</version>	
    	</plugin>
    	
    	
			<plugin>
    		<!-- Pour les releases -->  
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.0-beta-6</version>
        <configuration>
          <!--<tagBase>https://srcdev.lip6.fr/svn/research/coloane/sandbox/emasliah/releases</tagBase>-->
      		<branchName>${project.artifactId}-${project.version}</branchName>
      		<preparationGoals>scm:checkin clean integration-test release:branch</preparationGoals>
      		<updateBranchVersions>false</updateBranchVersions>
      		<updateWorkingCopyVersions>false</updateWorkingCopyVersions>
      	</configuration>	
     	</plugin>

   <plugin>
		<!-- Pour les tests -->
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>
		<configuration>
			<reportsDirectory>target/surefire-reports</reportsDirectory>
		</configuration>
  </plugin>
      
    	<!-- ~~~~~~~~~~~~~~~~~~~~~ Executions des plugins ~~~~~~~~~~~~~~~~~~~~~~
    			 ~~~~~~~~~~~~~~~~~~~~~ S'effectue dans l'ordre ~~~~~~~~~~~~~~~~~~~~~ -->
    			 
    	<plugin>
      	 <!-- Pour mettre le buildnumber au bout du jar ${buildNumber} 
      	 			/!\ Ne marche que avec svn en anglais -->
      	<groupId>org.codehaus.mojo</groupId>
      	<artifactId>maven-buildnumber-plugin</artifactId>
      	<version>0.9.4</version>
      	<executions>
        	<execution>
        		<id>BuildNumber</id>
          	<phase>validate</phase>        
          	<goals>
            	<goal>create</goal>
          	</goals>
        	</execution>
      	</executions>
     	</plugin>
     	
