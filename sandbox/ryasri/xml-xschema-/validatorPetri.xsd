<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<!-- Definition du type d'un attribut graphique -->
	<xs:complexType name="graph">
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute name="xposition" type="xs:string"/>
				<xs:attribute name ="yposition" type="xs:string"/>        
			</xs:extension>
		</xs:simpleContent>      
	</xs:complexType>

	<!-- Definition du type d'un modele -->
	<xs:complexType name="tmodel">
		<xs:all>
			<xs:element name="declaration" type="graph" minOccurs="0"/>
			<xs:element name="authors" type="graph" minOccurs="0"/>
			<xs:element name="version" type="graph" minOccurs="0"/>
			<xs:element name="project" type="graph" minOccurs="0"/>
			<xs:element name="title" type="graph" minOccurs="0"/>
			<xs:element name="date" type="graph" minOccurs="0"/>
			<xs:element name="code" type="graph" minOccurs="0"/>
			<xs:element name="note" type="graph" minOccurs="0"/>
			<xs:element name="nodes" type="tnodes" minOccurs="1"/>
			<xs:element name="arcs" type="tarcs" minOccurs="1"/>
		</xs:all>
		<xs:attribute name="formalism" type="xs:string" use="required" />
		<xs:attribute name="xposition" type="xs:string" />
		<xs:attribute name="yposition" type="xs:string" />
	</xs:complexType>

	<!-- Definition d'un noeud -->
	<xs:complexType name="tnode">
		<xs:all>
			<xs:element name="name" type="graph" minOccurs="0"/>
			<xs:element name="guard" type="graph" minOccurs="0"/>
			<xs:element name="priority" type="graph" minOccurs="0"/>
			<xs:element name="delay" type="graph" minOccurs="0"/>
			<xs:element name="component" type="graph" minOccurs="0"/>
			<xs:element name="action" type="graph" minOccurs="0"/>    <!--rectification de Actions par action -->
			<xs:element name="domain" type="graph" minOccurs="0"/>
			<xs:element name="marking" type="graph" minOccurs="0"/>
			<xs:element name="weight" type="graph" minOccurs="0"/>
			<xs:element name="note" type="graph" minOccurs="0"/>	<!--rejout de l'element Note -->
		</xs:all>
		<xs:attribute name="id" type="xs:string" use="required"/>
		<xs:attribute name="nodetype" type="xs:string" use="required" />
		<xs:attribute name="xposition" type="xs:string" />
		<xs:attribute name="yposition" type="xs:string" /> 
	</xs:complexType>

	<!-- Definition d'un arc -->
	<xs:complexType name="tarc">
		<xs:all>
			<xs:element name="valuation" type="graph" minOccurs="0"/>
			<xs:element name="note" type="graph" minOccurs="0"/>
		</xs:all>
		<xs:attribute name="id" type="xs:string" use="required"/> 
		<xs:attribute name="arctype" type="xs:string" use="required"/>
		<xs:attribute name="startid" type="xs:string" use="required"/>
		<xs:attribute name="endid" type="xs:string" use="required"/>
	</xs:complexType>

	<!-- Definition d'un ensemble de noeuds -->
	<xs:complexType name="tnodes">
		<xs:sequence> 
			<xs:element name="node" type="tnode" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<!-- Definition d'un ensemble d'arcs -->
	<xs:complexType name="tarcs">
		<xs:sequence> 
			<xs:element name="arc" type="tarc" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<!-- Definition d'un noeud -->
	<xs:element name="node" type="tnode" />

	<!-- Definition d'un arc -->
	<xs:element name="arc" type="tarc" />

	<!-- Definition des groupes de noeuds-->
	<xs:element name="nodes" type="tnodes" />

	<!-- Definition d'un groupe d'arcs -->
	<xs:element name="arcs" type="tarc" />

	<!-- Definition d'un modele -->
	<xs:element name="model" type="tmodel" />
</xs:schema>
