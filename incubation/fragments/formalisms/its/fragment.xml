<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<fragment>
   <extension
         point="fr.lip6.move.coloane.core.formalisms">
      <Formalism
            extension="itsc"
            fkname="AMI-Net"
            id="ITS Composite"
            image="resources/itsc_icon.png"
            name="ITSComposite">
         <XmlDescription>
            <Graph
                  name="ITSComposite">
               <Attribute
                     bold="true"
                     drawable="true"
                     multiline="false"
                     name="title">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="authors">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="comments">
               </Attribute>
               <Node
                     container="false"
                     name="instance">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.RectangleNode"
                        description="Create a type instance"
                        drawable="true"
                        fill="false"
                        height="30"
                        icon16px="resources/artifact.gif"
                        icon24px="resources/artifact.gif"
                        palettable="true"
                        paletteName="Instance"
                        width="50">
                  </GraphicInfo>
                  <Attribute
                        bold="false"
                        default="i"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="name">
                  </Attribute>
                  <Attribute
                        bold="true"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="type">
                  </Attribute>
               </Node>
               <Node
                     container="false"
                     name="synchronization">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.RectangleNode"
                        description="Create a Synchronization"
                        drawable="true"
                        fill="true"
                        height="4"
                        icon16px="resources/formalisms/its/transition_16.png"
                        icon24px="resources/formalisms/its/transition_24.png"
                        palettable="true"
                        paletteName="Synchronization"
                        width="20">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="name">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="label">
                  </Attribute>
               </Node>
               <Arc
                     name="arc">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.UndirectedArc"
                        description="Create a Synchronization part"
                        drawable="true"
                        icon16px="resources/formalisms/its/link_16.png"
                        icon24px="resources/formalisms/its/link_24.png"
                        palettable="true"
                        paletteName="Synch. Part">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="labels">
                  </Attribute>
               </Arc>
            </Graph>
         </XmlDescription>
      </Formalism>
      <Formalism
            extension="model"
            fkname="Circular Composite"
            id="Circular Composite"
            image="resources/itsc_circ_icon.png"
            name="CircularComposite">
         <XmlDescription>
            <Graph
                  name="ITSCircularComposite">
               <Attribute
                     bold="true"
                     drawable="true"
                     multiline="false"
                     name="title">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="authors">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="comments">
               </Attribute>
               <Node
                     container="false"
                     name="instance">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.CircularSetNode"
                        description="Create a type instance"
                        drawable="true"
                        fill="false"
                        height="30"
                        icon16px="resources/itsc_icon.png"
                        icon24px="resources/itsc_icon.png"
                        palettable="true"
                        paletteName="Instance"
                        width="50">
                  </GraphicInfo>
                  <Attribute
                        bold="false"
                        default="i"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="name">
                  </Attribute>
                  <Attribute
                        bold="true"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="type">
                  </Attribute>
               </Node>
               <Node
                     container="false"
                     name="synchronization">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.RectangleNode"
                        description="Create a Synchronization"
                        drawable="true"
                        fill="true"
                        height="4"
                        icon16px="resources/formalisms/its/transition_16.png"
                        icon24px="resources/formalisms/its/transition_24.png"
                        palettable="true"
                        paletteName="Synchronization"
                        width="20">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="name">
                  </Attribute>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="label">
                  </Attribute>
               </Node>
               <Arc
                     name="arc">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.UndirectedArc"
                        description="Create a Synchronization part"
                        drawable="true"
                        icon16px="resources/formalisms/its/link_16.png"
                        icon24px="resources/formalisms/its/link_24.png"
                        palettable="true"
                        paletteName="Synch. Part">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="labels">
                  </Attribute>
               </Arc>
            </Graph>
         </XmlDescription>

      </Formalism>
      <Formalism
            extension="itsc"
            fkname="Scalar Set Composite"
            id="Scalar Set Composite"
            image="resources/itsc_icon.png"
            name="Scalar Set Composite">
         <XmlDescription>
            <Graph
                  name="ITSScalarComposite">
               <Attribute
                     bold="true"
                     drawable="true"
                     multiline="false"
                     name="title">
               </Attribute>
               <Attribute
                     bold="true"
                     default="$SIZE"
                     drawable="true"
                     multiline="false"
                     name="size">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="authors">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="comments">
               </Attribute>
               <Node
                     container="false"
                     name="instance">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.ScalarSetNode"
                        description="Create a type instance"
                        drawable="true"
                        fill="false"
                        height="30"
                        icon16px="resources/itsc_icon.png"
                        icon24px="resources/itsc_icon.png"
                        palettable="true"
                        paletteName="Instance"
                        width="50">
                  </GraphicInfo>
                  <Attribute
                        bold="false"
                        default="i"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="name">
                  </Attribute>
                  <Attribute
                        bold="true"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="type">
                  </Attribute>
               </Node>
               <Node
                     container="false"
                     name="delegator">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.RectangleNode"
                        description="Create a Delegator"
                        drawable="true"
                        fill="true"
                        height="4"
                        icon16px="resources/formalisms/its/transition_16.png"
                        icon24px="resources/formalisms/its/transition_24.png"
                        palettable="true"
                        paletteName="Delegator"
                        width="20">
                  </GraphicInfo>
                  <Attribute
                        drawable="true"
                        multiline="true"
                        name="label">
                  </Attribute>
                  <Attribute
                        bold="false"
                        default="private"
                        drawable="true"
                        enumerated="true"
                        italic="true"
                        multiline="false"
                        name="visibility">
                     <EnumerationValue
                           name="private">
                     </EnumerationValue>
                     <EnumerationValue
                           name="public">
                     </EnumerationValue>
                  </Attribute>
                  <Attribute
                        bold="true"
                        default="ANY"
                        drawable="true"
                        enumerated="true"
                        fontsize="12"
                        multiline="false"
                        name="kind">
                     <EnumerationValue
                           name="ANY">
                     </EnumerationValue>
                     <EnumerationValue
                           name="ALL">
                     </EnumerationValue>
                  </Attribute>
               </Node>
               <Arc
                     name="arc">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.UndirectedArc"
                        description="Create a Synchronization part"
                        drawable="true"
                        icon16px="resources/formalisms/its/link_16.png"
                        icon24px="resources/formalisms/its/link_24.png"
                        palettable="true"
                        paletteName="Synch. Part">
                  </GraphicInfo>
               </Arc>
            </Graph>
         </XmlDescription>
      </Formalism>
   </extension>
   <extension
         point="fr.lip6.move.coloane.core.examples">
      <example
            build="fr.lip6.move.coloane.core.formalisms.its.CircularEmptyModel"
            description="The default empty circular composite."
            formalism="CircularComposite"
            name="its.EmptyCircularComposite">
      </example>
   </extension>

</fragment>
