<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<fragment>
   <extension
         point="fr.lip6.move.coloane.core.formalisms">
      <Formalism
            extension="ta"
            fkname="Timed Automata"
            id="Timed Automata"
            image="resources/clock.png"
            name="Timed Automata">
         <XmlDescription>
            <Graph
                  name="TA">
               <Attribute
                     bold="true"
                     drawable="true"
                     multiline="false"
                     name="title">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="declarations">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="authors">
               </Attribute>
               <Attribute
                     drawable="true"
                     multiline="true"
                     name="comments">
               </Attribute>
               <Node
                     container="false"
                     name="initial">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.DoubleEllipseNode"
                        description="Create a location"
                        drawable="true"
                        fill="false"
                        height="18"
                        icon16px="resources/formalisms/ta/initial_16.png"
                        icon24px="resources/formalisms/ta/initial_24.png"
                        palettable="true"
                        paletteName="Initial Location"
                        width="18">
                  </GraphicInfo>
                  <Attribute
                        bold="true"
                        delta_x="20"
                        delta_y="0"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="name">
                  </Attribute>
                  <Attribute
                        bold="true"
                        default="true"
                        delta_x="-10"
                        delta_y="10"
                        displayed_default="false"
                        drawable="true"
                        italic="false"
                        multiline="true"
                        name="invariant">
                  </Attribute>
               </Node>
               <Node
                     container="false"
                     name="location">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.EllipseNode"
                        description="Create a location"
                        drawable="true"
                        fill="false"
                        height="18"
                        icon16px="resources/formalisms/ta/place_16.png"
                        icon24px="resources/formalisms/ta/place_24.png"
                        palettable="true"
                        paletteName="Location"
                        width="18">
                  </GraphicInfo>
                  <Attribute
                        bold="true"
                        delta_x="20"
                        delta_y="0"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="name">
                  </Attribute>
                  <Attribute
                        bold="true"
                        delta_x="-10"
                        delta_y="10"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="invariant">
                  </Attribute>
               </Node>
               <Arc
                     name="transition">
                  <GraphicInfo
                        associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.DirectedArc"
                        description="Create a transition"
                        drawable="true"
                        icon16px="resources/formalisms/ta/arc_16.png"
                        icon24px="resources/formalisms/ta/arc_24.png"
                        palettable="true"
                        paletteName="Transition">
                  </GraphicInfo>
                  <Attribute
                        bold="false"
                        delta_x="0"
                        delta_y="-20"
                        drawable="true"
                        italic="false"
                        multiline="false"
                        name="trigger">
                  </Attribute>
                  <Attribute
                        default="true"
                        delta_x="0"
                        delta_y="0"
                        displayed_default="false"
                        drawable="true"
                        multiline="true"
                        name="guard">
                  </Attribute>
                  <Attribute
                        delta_x="0"
                        delta_y="20"
                        drawable="true"
                        multiline="true"
                        name="action">
                  </Attribute>
                  <Attribute
                        bold="true"
                        delta_x="30"
                        delta_y="0"
                        drawable="true"
                        multiline="true"
                        name="reset">
                  </Attribute>
               </Arc>
            </Graph>
              </XmlDescription>               
      </Formalism>
   </extension>
</fragment>
