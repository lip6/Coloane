<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="fr.lip6.move.coloane.examples.category"
            name="Coloane Examples"
            parentCategory="org.eclipse.ui.Examples"/>
      <wizard
            canFinishEarly="true"
            category="org.eclipse.ui.Examples/fr.lip6.move.coloane.examples.category"
            class="fr.lip6.move.coloane.extensions.examples.wizard.FischerExampleWizard"
            finalPerspective="fr.lip6.move.coloane.perspective"
            hasPages="false"
            icon="icons/clock.png"
            id="fr.lip6.move.coloane.extensions.examples.tpn.fischer"
            name="Fischer&apos;s mutual exclusion"
            project="true">
         <description>This example is a composite Time Petri Net modelling Fischer&apos;s mutual exclusion algorithm for a ring of process.</description>
      </wizard>
      <wizard
            canFinishEarly="true"
            category="org.eclipse.ui.Examples/fr.lip6.move.coloane.examples.category"
            class="fr.lip6.move.coloane.extensions.examples.wizard.TrainExampleWizard"
            finalPerspective="fr.lip6.move.coloane.perspective"
            hasPages="false"
            icon="icons/clock.png"
            id="fr.lip6.move.coloane.extensions.examples.tpn.train"
            name="Train crossing"
            project="true">
         <description>
            This example is a composite Time Petri Net modelling an N railtrack train crossing problem by Berthomieu et. al.
         </description>
      </wizard>
      <wizard
            canFinishEarly="true"
            category="org.eclipse.ui.Examples/fr.lip6.move.coloane.examples.category"
            class="fr.lip6.move.coloane.extensions.examples.wizard.SharedMemoryExampleWizard"
            finalPerspective="fr.lip6.move.coloane.perspective"
            hasPages="false"
            icon="icons/clock.png"
            id="fr.lip6.move.coloane.extensions.examples.tpn.SharedMemory"
            name="Shared Memory"
            project="true">
         <description>
            This example is a composite Petri Net modelling a shared memory model using a BUS. It features a scalar set and some pretty complex synchronizations.
         </description>
      </wizard>
   </extension>

</plugin>
