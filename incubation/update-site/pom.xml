<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent> 
		<groupId>fr.lip6.move.coloane.incubation</groupId> 
		<artifactId>coloane-parent</artifactId> 
		<version>1.0-INCUBATION</version> 
	</parent>

	<artifactId>update-site</artifactId>
	<packaging>pom</packaging>
	<name>Incubation Update Site</name>
	<description>Eclipse Update Site for Coloane Project in Incubation Phase</description>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<!-- Construction du fichier de description du site de mise à jour -->
					<execution>
						<id>BuildSiteXML</id>
						<phase>generate-sources</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>${env.BUILDTOOLS}/buildSiteXML.pl</executable>
							<arguments>
								<argument>site.xml</argument>
								<argument>${build.finalName}</argument>
								<argument>${project.deployPath}</argument>
							</arguments>
						</configuration>
					</execution>
					<!-- Déploiement du JAR au bon endroit (snapshot/release) -->
					<execution>
						<id>Deploy</id>
						<phase>deploy</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>${env.BUILDTOOLS}/deployUpdateSite.sh</executable>
							<arguments>
								<argument>${project.version}</argument>
								<argument>${project.deployPath}</argument>
							</arguments>
						</configuration>
					</execution>
                                        <!-- Mise à jour de l'update site pour la compatibilité eclipse >=3.5 (p2 metadata) -->
					<execution>
						<id>GenerateMetadata</id>
						<phase>deploy</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>${env.BUILDTOOLS}/generateMetadata.sh</executable>
							<arguments>
								<argument>${project.version}</argument>
								<argument>${project.deployPath}</argument>
							</arguments>
						</configuration>
					</execution>
					<!-- Synchronisation avec le serveur HTTP de Coloane -->
					<execution>
						<id>Synchronize</id>
						<phase>deploy</phase>        
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>${env.BUILDTOOLS}/synchronize.sh</executable>
							<arguments>
								<argument>${project.deployPath}</argument>
								<argument>/coloane/public</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
