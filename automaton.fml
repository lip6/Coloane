<!--  ====================  -->
<!--  Automaton definition  -->
<!--  ====================  -->
<formalism xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:sch="http://purl.oclc.org/dsdl/schematron" xmlns:grml="http://cosyverif.org/ns/model" xmlns="http://cosyverif.org/ns/formalism" name="automaton">
<leafAttribute name="initialState"/>
<leafAttribute name="finalState"/>
<complexAttribute name="type" refType="state">
<child refName="initialState" minOccurs="0" maxOccurs="1"/>
<child refName="finalState" minOccurs="0" maxOccurs="1"/>
</complexAttribute>
<leafAttribute name="name" refType="state" maxOccurs="1"/>
<leafAttribute name="label" refType="transition" maxOccurs="1"/>
<leafAttribute name="shared" refType="transition" maxOccurs="1"/>
<nodeType name="state"/>
<arcType name="transition"/>
</formalism>