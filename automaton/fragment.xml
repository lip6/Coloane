<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="fr.lip6.move.coloane.core.formalisms">
    <Formalism
    	id="automaton" 
    	name="automaton" 
        fkname="automaton.Formalism1"
    	extension="aut">
    	<XmlDescription>
    		<Graph 
    			name="automaton">			
				<Node container="false" name="state">
					<GraphicInfo
			           associatedFigure="fr.lip6.move.coloane.core.ui.figures.nodes.EllipseNode"
			           description="state"
			           drawable="true"
			           height="15"
			           icon16px="resources/state_16.png"
			           icon24px="resources/state_24.png"
			           palettable="true"
			           paletteName="State"
			           width="15">
					</GraphicInfo> 					
					<Attribute
						name = "name"
						multiline="false"
						drawable = "true">
					</Attribute>
					<Attribute
                        displayed_default="false"
                        drawable="true"
                        multiline="false"
                        name="type">
                     		<EnumerationValue
                           		name="initialState">
	                     	</EnumerationValue>
	                     	<EnumerationValue
	                           name="finalState">
	                     	</EnumerationValue>
	                     	<EnumerationValue
	                           name="intermediateState">
	                     	</EnumerationValue>
                    </Attribute>
				</Node>
				
				<Arc name="arc">
					<GraphicInfo
				       associatedFigure="fr.lip6.move.coloane.core.ui.figures.arcs.DirectedArc"
				       description="arc"
				       drawable="true"
				       height="7"
				       icon16px="resources/arc_16.png"
				       icon24px="resources/arc_24.png"
				       palettable="true"
				       paletteName="Arc">
					</GraphicInfo> 					
					<Attribute
						name = "label"
						drawable = "true"
						multiline = "false">
					</Attribute>
					<Attribute
                        displayed_default="false"
                        drawable="true"
                        multiline="false"
                        name="shared">
                     <EnumerationValue
                           name="0">
                     </EnumerationValue>
                     <EnumerationValue
                           name="1">
                     </EnumerationValue>                    
                  </Attribute>
				</Arc>
								
			</Graph>
		</XmlDescription>
    </Formalism>
   </extension>
</fragment>
