<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fr.lip6.move.coloane.extensions</groupId>
        <artifactId>extensions-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>fr.lip6.move.coloane.extensions.exportToGML</artifactId>
    <packaging>eclipse-plugin</packaging>
    <name>Extensions :: Export GML</name>
    <description>Coloane's extension that provides GML export feature</description>

    <properties>
        <sonar.exclusions>**/antlr/*.java</sonar.exclusions>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.antlr</groupId>
                <artifactId>antlr3-maven-plugin</artifactId>
                <version>3.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>antlr</goal>
                        </goals>
<!--                         <configuration>-->
<!--                             <outputDirectory>target/classes</outputDirectory>-->
<!--                         </configuration>-->
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
